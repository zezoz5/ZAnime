@model IEnumerable<Anime>
@{
    ViewData["Title"] = "Anime View";
}
<div class="container p-4">

    <div class="row pt-5">

        <div class="col-6">
            <h2 class="text-body">Anime View</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Anime" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Anime</a>
        </div>

    </div>

    <table class="table table-hover">
        <thead class="table-primary">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Season</th>
                <th scope="col">Statues</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-secondary">
            @foreach (var anime in Model)
            {
                <tr>
                    <td width="30%">@anime.Title</td>
                    <td width="30%">@anime.Season</td>
                    <td width="20%">@anime.State</td>
                    <td width="20%">
                        <a asp-controller="Anime" asp-action="Edit" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil-square"></i></a>
                        &nbsp;
                        <a asp-controller="Anime" asp-action="Delete" class="btn btn-sm btn-danger">
                            <i class="bi bi-x-circle"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>