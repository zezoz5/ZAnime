@model IEnumerable<Anime>
@{
    ViewData[index: "Title"] = "Anime View";
}
<div class="container p-4">

    <div class="row pt-5">

        <div class="col-6">
            <h3 class="text-body mb-4">Anime View</h3>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Anime" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Anime</a>
        </div>

        <div class="container">
            <div class="row ">
                @foreach (Anime anime in Model)
                {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="card h-100">
                            <div class="poster-container mb-2">
                                <img src="@anime.ImageUrl" class="img-fluid card-img-top rounded" alt="@anime.Title">
                            </div>
                            <div class="card-body">
                                <p class="card-title">@anime.Title</p>
                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>